{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <div class="container">
        <a href="{{ path('create_article') }}" class="btn btn-success">Create Article</a>

        <table class="table table-striped mt-3">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">User</th>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col">Is Publish</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <th scope="row">{{ article.id }}</th>
                    <td>{{ article.user }}</td>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.isPublish ? 'Yes' : 'No' }}</td>
                    <td class="table-buttons">
                        <a href="{{ path('single_article', {'article': article.id}) }}" class="btn btn-success">
                            <i class="fa fa-eye"></i>
                        </a>
                        <a href="{{ path('update_article', {'article' : article.id}) }}" class="btn btn-primary">
                            <i class="fa fa-pencil" ></i>
                        </a>
                        <a href="{{ path('delete_article', {'article' : article.id}) }}" class="btn btn-danger">
                            <i class="fa fa-trash" ></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
